{
  "version": 2,
  "framework": "nextjs",

  "env": {
    "DB_HOST": "@DB_HOST",
    "DB_USER": "@DB_USER",
    "DB_PASSWORD": "@DB_PASSWORD"
  },
 
  "builds": [
    {
      "src": "src/main.ts",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "25mb",
        "cmd": "npm run build"
        
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "src/main.ts",
      "methods": ["GET", "POST", "PUT", "DELETE"]
    }
  ]
}
